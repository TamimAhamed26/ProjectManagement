@page
@model RegisterModel
@{
   ViewData["Title"] = "Register";
}

<!-- Page Content -->
<div class="container py-5">
   <div class="row justify-content-center">
      <div class="col-lg-5">
         <div class="card shadow-sm border-0">
            <div class="card-body p-4">
               <h2 class="text-center mb-4">Create an account</h2>
               <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                  <div class="form-floating mb-3">
                     <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                     <label asp-for="Input.Email">Email</label>
                     <span asp-validation-for="Input.Email" class="text-danger small"></span>
                  </div>

                  <div class="form-floating mb-3">
                     <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                     <label asp-for="Input.Password">Password</label>
                     <span asp-validation-for="Input.Password" class="text-danger small"></span>
                  </div>

                  <div class="form-floating mb-3">
                     <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                     <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                     <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                  </div>

                  <div class="d-grid mb-3">
                     <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Register</button>
                  </div>

                  <div class="text-center">
                     <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="d-block">
                        Already have an account? Log in
                     </a>
                  </div>
               </form>
            </div>
         </div>

         <!-- External Login -->
         <div class="card mt-4 shadow-sm border-0">
            <div class="card-body p-4">
               <h4 class="text-center mb-3">Or register with</h4>
               @{
                  if ((Model.ExternalLogins?.Count ?? 0) == 0)
                  {
                     <p class="text-muted small text-center">
                        No external authentication services are configured.
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">Learn how to set up</a>.
                     </p>
                  }
                  else
                  {
                     <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-grid gap-2">
                           @foreach (var provider in Model.ExternalLogins!)
                           {
                              <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name">
                                 <i class="bi bi-person-plus me-1"></i> Register with @provider.DisplayName
                              </button>
                           }
                        </div>
                     </form>
                  }
               }
            </div>
         </div>
      </div>
   </div>
</div>

@section Scripts {
   <partial name="_ValidationScriptsPartial" />
}
