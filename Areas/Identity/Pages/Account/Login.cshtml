@page
@model LoginModel
@{
   ViewData["Title"] = "Log in";
}

<!-- Page Content -->
<div class="container py-5">
   <div class="row justify-content-center">
      <div class="col-lg-5">
         <div class="card shadow-sm border-0">
            <div class="card-body p-4">
               <h2 class="text-center mb-4">Log in</h2>
               <form id="account" method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                  <div class="form-floating mb-3">
                     <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                     <label asp-for="Input.Email">Email</label>
                     <span asp-validation-for="Input.Email" class="text-danger small"></span>
                  </div>

                  <div class="form-floating mb-3 position-relative">
                     <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" type="password" id="passwordInput" />
                     <label asp-for="Input.Password">Password</label>
                     <span asp-validation-for="Input.Password" class="text-danger small"></span>
                     <button type="button" class="btn btn-outline-secondary btn-sm position-absolute top-50 end-0 translate-middle-y me-2" tabindex="-1" style="z-index:2;" onclick="togglePasswordVisibility()" aria-label="Show password">
                        <span id="togglePasswordIcon"><i class="bi bi-eye"></i></span>
                     </button>
                  </div>

               

                  <div class="form-check mb-3">
                     <input class="form-check-input" asp-for="Input.RememberMe" />
                     <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                     </label>
                  </div>

                  <div class="d-grid mb-3">
                     <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                  </div>

                  <div class="text-center">
                     <a id="forgot-password" asp-page="./ForgotPassword" class="d-block mb-1">Forgot your password?</a>
                     <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="d-block mb-1">Register as a new user</a>
                     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="d-block">Resend email confirmation</a>
                  </div>
               </form>
            </div>
         </div>

         @* External Login *@
         <div class="card mt-4 shadow-sm border-0">
            <div class="card-body p-4">
               <h4 class="text-center mb-3">Or log in with</h4>
               @{
                  if ((Model.ExternalLogins?.Count ?? 0) == 0)
                  {
                     <p class="text-muted small text-center">
                        No external authentication services are configured.
                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">
                           Learn how to set up
                        </a>.
                     </p>
                  }
                  else
                  {
                     <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-grid gap-2">
                           @foreach (var provider in Model.ExternalLogins!)
                           {
                              <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name">
                                 <i class="bi bi-box-arrow-in-right me-1"></i> Log in with @provider.DisplayName
                              </button>
                           }
                        </div>
                     </form>
                  }
               }
            </div>
         </div>
      </div>
   </div>
</div>

@section Scripts {
   <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePasswordVisibility() {
           const passwordInput = document.getElementById('passwordInput');
           const iconSpan = document.getElementById('togglePasswordIcon');
           if (passwordInput.type === 'password') {
              passwordInput.type = 'text';
              iconSpan.innerHTML = '<i class="bi bi-eye-slash"></i>';
           } else {
              passwordInput.type = 'password';
              iconSpan.innerHTML = '<i class="bi bi-eye"></i>';
           }
        }
    </script>
}
