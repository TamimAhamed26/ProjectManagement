@model ProjectManagement.Models.ApplicationUser
@{
   ViewData["Title"] = "My Profile";
}

<div class="container py-5">
   <div class="row justify-content-center">
      <div class="col-lg-6">
         <div class="card shadow-sm border-0">
            <div class="card-body p-4 text-center">

               <h2 class="mb-4">My Profile</h2>

               <div class="mb-4">
                  <img src="@(string.IsNullOrEmpty(Model.PicturePath) ? "/Pictures/default-profile.png" : Model.PicturePath)"
                       alt="Profile Picture"
                       class="rounded-circle img-thumbnail"
                       style="width: 150px; height: 150px; object-fit: cover;" />
               </div>

               <ul class="list-group list-group-flush text-start mb-4">
                  <li class="list-group-item">
                     <strong>Name:</strong> @Model.Name
                  </li>
                  <li class="list-group-item">
                     <strong>Email:</strong> @Model.Email
                  </li>
                  <li class="list-group-item">
                     <strong>Phone:</strong> @Model.PhoneNo
                  </li>
               </ul>

               <a asp-action="Edit" class="btn btn-primary btn-lg w-100">Edit Profile</a>

            </div>
         </div>
      </div>
   </div>
</div>
