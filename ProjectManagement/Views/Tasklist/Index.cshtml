@model IEnumerable<ProjectManagement.Models.Tasklist>
@{
    ViewData["Title"] = "Tasks";
}
<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <h2>Tasks</h2>

            <p>
                <a asp-action="Create" class="btn btn-primary">Create New Task</a>
            </p>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@(item.Category?.Name ?? "Uncategorized")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.TasklistId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.TasklistId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
