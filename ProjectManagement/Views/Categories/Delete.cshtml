@model ProjectManagement.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<h3>Are you sure you want to delete this category?</h3>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>

    @if (Model.Tasklists != null && Model.Tasklists.Any())
    {
        <h5>This category has the following tasks:</h5>
        <ul>
            @foreach (var task in Model.Tasklists)
            {
                <li>@task.Title</li>
            }
        </ul>
    }
    else
    {
        <p><em>No tasks are assigned to this category.</em></p>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
